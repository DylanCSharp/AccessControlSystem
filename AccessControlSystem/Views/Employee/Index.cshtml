@model IEnumerable<AccessControlSystem.Models.Employee>
@{
    ViewData["Title"] = "Employee Code";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Network Configurations&trade;</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
      <div class="container-fluid">
           <div class="card border-0 shadow my-5" style="min-height: 78vh;">
                <div class="card-body p-5 justify-content-center align-self-center" style="margin-top: 15vh">
                    <h2 class="font-weight-light text-center">Welcome back to Network Configurations&trade;</h2>
                    <h5 class="font-weight-light text-center">@TempData["Invalid"]</h5>
                    <h5 class="font-weight-light text-center">@TempData["Exception"]</h5>
                    <h5 class="font-weight-light text-center">@TempData["SignedIn"]</h5>
                    <h5 class="font-weight-light text-center">@TempData["LoginFirst"]</h5>
                    <hr />
                    <form>
                    <div class="form-group text-center">
                        <label for="empName">Choose an Employee Name:</label>
                        <br />
                        <select class="form-select btn-outline-info rounded" style="min-width: 28.5vh; max-width: 35vh; min-height: 5vh;" id="empName" name="name">
                            @foreach (var item in Model)
                            {
                                <option value="@item.EmployeeName">@item.EmployeeName</option>
                            }
                        </select>
                        <br />
                        <br />
                        <label for="inputEmployee">Enter your 4-Digit Employee Pass Code:</label>
                        <br />
                        <div class="form-wrap">
                            <input id="txb1" type="password" pattern="[1-9]+" style="min-height: 5vh; max-width: 6.5vh; text-align: center; font-size: 24px; font-weight: bold" name="one" maxlength="1" required />
                            <input id="txb2" type="password" style="min-height: 5vh; max-width: 6.5vh; text-align: center; font-size: 24px; font-weight: bold" name="two" maxlength="1" required />
                            <input id="txb3" type="password" style="min-height: 5vh; max-width: 6.5vh; text-align: center; font-size: 24px; font-weight: bold" name="three" maxlength="1" required />
                            <input id="txb4" type="password" style="min-height: 5vh; max-width: 6.5vh; text-align: center; font-size: 24px; font-weight: bold" name="four" maxlength="1" required />
                        </div>
                        <br />
                        <button type="submit" class="btn btn-lg btn-outline-dark" formmethod="post">Login</button>
                        </div>
                        </form>
                    </div>
                </div>
           </div>
    <script type="text/javascript">
        document.getElementById('txb1').oninput = function () {
            if (this.value.length == this.maxLength) {
                document.getElementById('txb2').focus();
            }
        }
        document.getElementById('txb2').oninput = function () {
            if (this.value.length == this.maxLength) {
                document.getElementById('txb3').focus();
            }
        }
        document.getElementById('txb3').oninput = function () {
            if (this.value.length == this.maxLength) {
                document.getElementById('txb4').focus();
            }
        }
       

        window.addEventListener("keydown", function (e) {
            if (e.keyCode === 8) {
                if (this.document.getElementById('txb4')) {
                    this.document.getElementById('txb4').value = null;
                    document.getElementById('txb3').focus();
                }
            }
        });
        
    </script>
</body>
</html>
