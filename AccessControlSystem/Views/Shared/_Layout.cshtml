@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Net Config&trade;</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="fixed-top">
            <div class="logo">
                <label>Network Configurations&trade;</label>
                
            </div>
            <ul class="nav-links">
                <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                <li><a asp-action="Login" asp-controller="Admin">Admin Check In</a></li>
                <li><a asp-action="Index" asp-controller="Employee">Employee Check In</a></li>
                @if (Context.Session.GetString("LoggedInAdmin") != null)
                {
                    <li><a asp-action="VisitorLogs" asp-controller="Admin">Check Visitor Logs</a></li>
                }
                @if (Context.Session.GetString("LoggedInUser") != null || Context.Session.GetString("LoggedInAdmin") != null)
                {
                    <li><a asp-action="Logout" asp-controller="Employee">Logout</a></li>
                }
            </ul>
            <div class="burger">
                <div class="line1"></div>
                <div class="line2"></div>
                <div class="line3"></div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
