@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Network Configurations&trade;</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="card border-0 shadow" style="min-height: 78vh;">
            <div class="card-body justify-content-center align-self-center" style="margin-top: 20vh">
                <h2 class="font-weight-light text-center">Welcome to Our Portal!</h2>
                <h5 class="font-weight-light text-center">@TempData["AlreadyCheckedIn"]</h5>
                <h5 class="font-weight-light text-center">@TempData["SignOut"]</h5>
                <h5 class="font-weight-light text-center">@TempData["CheckedIn"]</h5>
                <h5 class="font-weight-light text-center">@TempData["AlreadySignedOut"]</h5>
                <h5 class="font-weight-light text-center">@TempData["LoggedOut"]</h5>
                <h5 class="font-weight-light text-center">@TempData["VisitorSuccess"]</h5>
                <h5 class="font-weight-light text-center">@TempData["Exception"]</h5>
                <h5 class="font-weight-light text-center">@TempData["AdminLogout"]</h5>
                <hr />
                <div class="form-group text-center">
                    <label for="inputEmployee">Are you part of our Staff or a Visitor?</label>
                    <br />
                    <form>
                    <button type="submit" class="btn btn-outline-secondary btn-lg" style="width: 100px;" id="inputEmployee" value="1" formmethod="post" name="employee" required>Staff</button>
                    <div style="height: 5px;"></div>
                    <button type="submit" class="btn btn-outline-dark btn-lg" style="width: 100px;" id="inputVisitor" formmethod="post" name="visitor" required>Visitor</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
